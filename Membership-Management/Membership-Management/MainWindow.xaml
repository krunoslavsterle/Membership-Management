<Window x:Class="Membership_Management.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Membership_Management"
        mc:Ignorable="d"
        Title="MainWindow" MinHeight="450" MinWidth="800" WindowState="Maximized">
    <Grid>
        <DockPanel>
            <DockPanel DockPanel.Dock="Left" x:Name="dpMenu" HorizontalAlignment="Left" Width="200" Background="Green">
                <Button DockPanel.Dock="Top" FontSize="22" Height="30" Content="Home"></Button>
                <Button DockPanel.Dock="Top" FontSize="22" Height="30" Content="Home"></Button>
                <Button DockPanel.Dock="Top" FontSize="22" Height="30" Content="Home"></Button>
                <Button x:Name="btnLock" DockPanel.Dock="Bottom" FontSize="22" Height="30" Content="Lock" VerticalAlignment="Bottom" Click="BtnLock_Click"></Button>
            </DockPanel>
            <Frame DockPanel.Dock="Left" x:Name="MainFrame"
               NavigationUIVisibility="Hidden"></Frame>
        </DockPanel>
        
    </Grid>
</Window>
