<Page x:Class="Membership_Management.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Membership_Management"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Background="#373943"
      Title="Login">

    <Grid>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center">
            <Image Name="imgProjectArrow" 
                   Source="pack://application:,,,/Resources/Images/lock-yellow.png" 
                   Height="190" 
                   Width="190"
                   Margin="0 0 0 100"/>
            
            <PasswordBox Name="pbxPassword" Focusable="True"
                 Foreground="White" FontSize="24" Background="#494b54" BorderBrush="#494b54" Padding="6"
                 Width="300"
                 HorizontalContentAlignment="Center"
                PasswordChanged="PbxPassword_PasswordChanged"></PasswordBox>
        </StackPanel>
        
    </Grid>
</Page>
